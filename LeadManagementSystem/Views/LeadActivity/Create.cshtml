@model LeadManagementSystem.Models.LeadActivity

@{
    ViewData["Title"] = "Create";
}

<h2>Create Lead Activity</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="LeadId" class="control-label">Lead</label>
        <select asp-for="LeadId" asp-items="ViewBag.Leads" class="form-control">
            <option value="">-- Select Lead --</option>
        </select>
        <span asp-validation-for="LeadId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="InteractionType" class="control-label">Interaction Type</label>
        <input asp-for="InteractionType" class="form-control" />
        <span asp-validation-for="InteractionType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Details" class="control-label">Details</label>
        <textarea asp-for="Details" class="form-control"></textarea>
        <span asp-validation-for="Details" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
