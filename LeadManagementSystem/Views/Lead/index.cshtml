
@model IEnumerable<LeadManagementSystem.Models.Lead>

@{
    ViewBag.Title = "Index";
}
<h2>Lead List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Organization</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Source</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lead in Model)
        {
            <tr>
                <td>@lead.Name</td>
                <td>@lead.Organization</td>
                <td>@lead.Email</td>
                <td>@lead.Phone</td>
                <td>@lead.Source</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@lead.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@lead.Id" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@lead.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
